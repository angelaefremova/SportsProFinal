@using GBCSporting_LAIR.Models.ViewModels.RegViewModel
@model AddRegViewModel
@{
  string pop_up = "";
  
  if (ViewContext.RouteData.Values["Action"].ToString().ToLower() == "productselect")
  {
    if (TempData.Keys.Contains("SelectedCustomer"))
      pop_up +=  "Selected " + TempData["SelectedCustomer"];
  }
}
<div>@pop_up</div>
<h1>ProductSelect</h1>

<h1>Register new Product</h1>
<h4>for @Model.customer.FullName</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProductSelect">
            <input type="hidden" asp-for="CustomerId" value="@Model.CustomerId" />
            <div class="form-group">
                <label asp-for="ProductId" class="control-label">Select a Product:</label>
                <select asp-for="ProductId" class="form-control">
                  <option>Please select a product</option>
                  @foreach (var p in Model.Products) {
                    <option value="@p.ProductId">@p.Name</option>
                  }
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Next" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>