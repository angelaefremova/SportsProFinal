@using GBCSporting_LAIR.Models
@using GBCSporting_LAIR.Models.ViewModels.IncidentViewModels

@model EditIncidentViewModel
@{
  ViewBag.Title = "Update Incident";
}

@using (Html.BeginForm("EditConfirm", "Incident", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("IncidentId", Model.Id)
    <div class="form-group">
        <label>Customers</label>
        @Html.DropDownList("CustomerId", Model.Customers, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Products</label>
        @Html.DropDownList("ProductId", Model.Products, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Title</label>
        @Html.TextBox("Title", Model.Title, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Description</label>
        @Html.TextBox("Description", Model.Description, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Technicians</label>
        @Html.DropDownList("TechnicianId", Model.Technicians, htmlAttributes: new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Date Opened</label>
        @Html.TextBox("DateOpened", Model.Date, htmlAttributes: new { @class = "form-control" })
    </div>
    <input style="margin-top:10px;" type="submit" class="btn btn-primary" value="Submit" />
}