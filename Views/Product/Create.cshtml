@model GBCSporting_LAIR.Models.ViewModels.ProductViewModels.AddProductViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>AddProductViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="YearlyPrice" class="control-label"></label>
                <input asp-for="YearlyPrice" class="form-control" />
                <span asp-validation-for="YearlyPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ReleasedDate" class="control-label"></label>
                <input type="date" asp-for="ReleasedDate" class="form-control" value=@DateTime.Now.ToShortDateString() />
                <span asp-validation-for="ReleasedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
